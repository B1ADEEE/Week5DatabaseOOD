<Window x:Class="Week5DatabaseOOD.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Week5DatabaseOOD"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    
    <TabControl TabStripPlacement= "Top">
        <TabItem Name="EX1" Header="EX1" Width="50">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="10*"/>
                    <RowDefinition Height="90*"/>
                </Grid.RowDefinitions>
                <Button Name="btnQueryEX1" Content="Query" Height="25" Width="75" Click="btnQuery_Click"/>
                <ListBox Name="lbxCustimersEX1" Grid.Row="1" Grid.Column="0"/>
            </Grid>
        </TabItem>
    </TabControl>
</Window>
